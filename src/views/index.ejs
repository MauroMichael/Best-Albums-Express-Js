<%- include('partials/header') %>

<% if (entries.length) { %>

    <div class="d-flex justify-content-around">
        <% entries.forEach(function(entry) { %>
            <div class="card m-3 col-md-3">
                <div class="card-header bg-primary text-white">
                    <p><%= entry.published %></p>
                </div>
                <div class="card-body">
                    <h3><%= entry.title %></h3>
                    <img class="img-fluid" src=<%= entry.cover %>><img>
                    <p><%= entry.content %></p>
                </div>
                <a href="/delete/<%= entry.id %>" class="btn btn-danger btn-sm">
                    Delete
                  </a>
            </div>
        <% }) %>
    </div>


<% } else { %>
    <p class="pl-2">No entries! <a href="/new-entry">Add One!</a></p>
<% } %>

<%- include('partials/footer') %>